    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Debug Crawl",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/crawler.php",
            "cwd": "${fileDirname}",
            "args": [
                "--action",
                "crawl",
                "--urlset",
                "https://www.01webdirectory.com",
                "https://www.fareilweb.com/"
            ],
            "port": 9000,
            "xdebugSettings": {
                "max_children": 100
            }
        },
        {
            "name": "Debug Help",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/crawler.php",
            "cwd": "${fileDirname}",
            "args": [
                "--help"
            ],
            "port": 9000
        },
        {
            "name": "Launch Test",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/tests_and_examples.php",
            "cwd": "${fileDirname}",
            "args": [],
            "port": 9000
        }
    ]
}